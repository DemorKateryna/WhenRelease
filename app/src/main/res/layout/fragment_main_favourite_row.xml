<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_favourite_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="2dp"
    card:cardElevation="2dp"
    card:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/main_favourite_card_poster"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/main_favourite_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/main_favourite_card_poster"
            android:layout_toRightOf="@+id/main_favourite_card_poster"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_favourite_card_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_favourite_card_title"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_toEndOf="@+id/main_favourite_card_poster"
            android:layout_toRightOf="@+id/main_favourite_card_poster"
            android:textSize="13sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>